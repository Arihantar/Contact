<p id="notice"></p>
<div class="alert-message block-message info">
	<h3>Client Details</h3>
	<div class="row">
		<div class="span3">
			<b>Name</b>
			<br />
			<b>Phone Numbers </b>
			<br />
			<b>Address</b>
			<br />
			<b>Important Dates</b>
			<br />
			<b>Email </b>
			<br />
		</div>
		<div class="span3">
			<%= @client.salutaion %> <%= @client.name %><br />
		</div>
		<div class="span3">
			<%@client.contact_infos.where(:nature => "Phone Number",:client_id =>@client.id).each do |info| %>
			<%= info.display_name %> (<%= info.data %>)
			
			<%end%>
		</div>
		<div>
			<%@client.contact_infos.where(:nature => "Address",:client_id =>@client.id).each do |info| %>
			<%= info.display_name%> (<%= info.data %>)
			<%end%>
		</div>
		<div>
			<%@client.contact_infos.where(:nature => "Date",:client_id =>@client.id).each do |info| %>
			<%= info.display_name%> (<%= info.data %>)
			<%end%>
		</div>
		<div>
			<%@client.contact_infos.where(:nature => "Link",:client_id =>@client.id).each do |info| %>
			<%= info.display_name%> (<%= info.data %>)
			<%end%>
		</div>
		<div>
			<%@client.contact_infos.where(:nature => "Email",:client_id =>@client.id).each do |info| %>
			<%= info.display_name%> (<%= info.data %>)
			<%end%>
		</div>
	</div>
	<%= link_to 'Back', clients_path, :class => "btn" %>
</div>
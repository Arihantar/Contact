<div class="span12">
	<%= form_for @client, :validate => true do |f| %>
	<% if @client.errors.any? %>
	<div id="error_explanation", class="alert-message Warning">
		<h2><%= pluralize(@client.errors.count, "error") %> Occured</h2>
		<ul>
			<% @client.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<fieldset>
		<div class="clearfix">
			<label>Salutation</label>
			<div class="input">
				<%= f.select(:salutaion,["Mr.","Mrs.","Ms.","Col.","Lt."])%>
			</div>
		</div>
		<div class="clearfix">
			<label>Name</label>
			<div class="input">
				<%= f.text_field :name, :class=>"required"  , :id=>"name", :minlength =>"15" %>
			</div>
		</div>
	</fieldset>
	<div class="actions">
		<%= f.submit :class => "btn primary" %> <a href="<%= clients_path %>" class="btn">Cancel</a>
	</div>
	<% end %>
</div>